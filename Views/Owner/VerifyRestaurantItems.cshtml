@model IEnumerable<EnterpriseHomeAssignment.Models.MenuItem>

<h2>Pending Menu Items</h2>
<form method="post" asp-controller="Items" asp-action="Approve">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td><input type="checkbox" name="menuItemIds" value="@m.Id" /></td>
                    <td>@m.Title</td>
                    <td>@m.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Approve selected</button>
</form>