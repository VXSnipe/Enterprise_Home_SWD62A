@model IEnumerable<EnterpriseHomeAssignment.Models.MenuItem>

<h2>Pending Menu Items</h2>

<form method="post" asp-action="Approve">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Price</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox"
                               name="menuItemIds"
                               value="@item.Id" />
                    </td>
                    <td>@item.Title</td>
                    <td>@item.Price</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">
        Approve selected
    </button>
</form>
